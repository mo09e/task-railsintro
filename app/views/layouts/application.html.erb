<!DOCTYPE html>
<html>
  <head>
    <title>Twitter Clone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="container">
       <header>
         <%= render "mywords/header" %>
       </header>
       <div class="main">
         <%= yield %>
       </div>
       <footer>
         <%= render "mywords/footer" %>
       </footer>
     </div>
  </body>
</html>
